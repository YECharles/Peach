<?xml version="1.0" encoding="iso-8859-1"?>
<application name="4xpath">
  <description>command-line tool for performing XPath queries on XML documents</description>
  <verbose-description>4XPath command-line application</verbose-description>
  <options>
    <option short-name="h" long-name="help">
      <description>show detailed help message</description>
    </option>
    <option short-name="V" long-name="version">
      <description>display version information and exit</description>
    </option>
    <option short-name="D" long-name="define">
      <description>Bind a top-level parameter</description>
      <argument name="NAME=VALUE">
      </argument>
    </option>
    <option short-name="N" long-name="namespace">
      <description>Define a namespace/prefix binding</description>
      <argument name="PREFIX=NAMESPACE">
      </argument>
    </option>
    <option short-name="e" long-name="stacktrace-on-error">
      <description>Display a stack trace when an error occurs</description>
    </option>
    <option long-name="string">
      <description>Print the string-value of the results</description>
    </option>
  </options>
  <arguments>
    <argument required="yes" multiple="no" name="source-uri">
      <description>The URI of the XML document to parse, or &quot;-&quot; to indicate standard input. The document's root node will be used as the context node.</description>
    </argument>
    <argument required="yes" multiple="no" name="expression">
      <description>The XPath expression to evaluate</description>
    </argument>
  </arguments>
</application>
