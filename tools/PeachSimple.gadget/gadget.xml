<?xml version="1.0" encoding="utf-8"?>
<gadget>
  <name>Peach Monitor</name>
  <version>1.0.0.0</version>
  <author name="Blake Frantz">
	<info url="http://peachfuzz.sf.net" text="Peach Fuzz"/>
	<logo src="icon.png"/>
  </author>
  <copyright>2008 Blake Frantz (blakefrantz@gmail.com and Michael Eddington (mike@phed.org)</copyright>
  <description>Displays Peach Fuzz Statistics</description>
  <icons>
    <icon height="48" width="48" src="icon.png"/>
  </icons>
