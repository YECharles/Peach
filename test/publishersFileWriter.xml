<?xml version="1.0" encoding="utf-8"?>
<Peach xmlns="http://phed.org/2008/Peach" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://phed.org/2008/Peach ../../../../../peach/peach.xsd" version="1.0"
	author="Michael Eddington" description="Hello World Example">
	
	<!-- Import defaults for Peach instance -->
	<Include ns="default" src="file:defaults.xml" />
	
	<!-- Create a simple data template containing a single string -->
	<DataModel name="TestTemplate">
		<String name="data" value="12345abcd" />
	</DataModel>
	
	<StateModel name="TestState" initialState="Initial">
		<State name="Initial">
			<Action type="open" />
			
			<Action type="output" name="SendTest">
				<DataModel ref="TestTemplate" />
			</Action>			
			
			<Action type="close" />
		</State>
	</StateModel>
	
	<Agent name="LocalAgent" location="http://127.0.0.1:9000">
		<Monitor class="test.TestStopOnFirst" />
	</Agent>
	
	<Test name="TheTest">
		<Agent ref="LocalAgent"/>
		<StateModel ref="TestState" />
		<Publisher class="file.FileWriter">
			<Param name="fileName" value="publishersFileWriter.dat"/>
		</Publisher>
	</Test>
	
	<Run name="DefaultRun">
		<Test ref="TheTest" />
	</Run>
	
</Peach>
<!-- end -->
